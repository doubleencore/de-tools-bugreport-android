<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

    <com.doubleencore.bugreport.internal.CanvasView
        android:id="@+id/canvas"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/fam"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="16dp"
        android:layout_gravity="bottom|end"
        app:fab_labelStyle="@style/menu_labels_style"
        app:fab_addButtonSize="mini">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_icon="@android:drawable/ic_menu_send"
            app:fab_size="mini"
            app:fab_title="Send Report"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_icon="@android:drawable/ic_menu_close_clear_cancel"
            app:fab_size="mini"
            app:fab_title="Clear"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/draw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_icon="@android:drawable/ic_menu_edit"
            app:fab_size="mini"
            app:fab_title="Draw"/>

    </com.getbase.floatingactionbutton.FloatingActionsMenu>

</merge>